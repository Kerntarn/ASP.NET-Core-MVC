@model Ticket;
@{
    ViewData["Title"] = "Add";
}

<h1 style="color:blue;">Buy a Ticket</h1>
<form method="POST" as asp-asp-controller="Ticket" asp-action="Add">
    <div class="form-group">
        <label asp-for="Movie"></label>
        <input type="text" asp-for="Movie" class="form-control"/>
        <span asp-validation-for="Movie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary my-2"> Add movie </button>
</form>